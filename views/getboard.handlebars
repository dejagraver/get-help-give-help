<!-- navigation bar -->
<header>
    <nav>
        <ul>
            <li>
                <a href="/">Home</a>
            </li>
            <li>
                <a href="/giveboard">Give Help Board</a>
            </li>
            <li>
                <a href="/getboard"><u>Get Help Board</u></a>
            </li>
            <li id="login-logout">
                {{#if loggedIn}}
                <a href="">Create New Post</a>
                <button class="btn btn-light">logout</button>
                {{else}}
                <a href="/login" id="navlogin">sign up or log in</a>
                {{/if}}
            </li>
        </ul>
    </nav>
</header>

<div>
    <h1>Get Help Board</h1>
</div>
{{!-- posts --}}
<ol class="post-list" style="color: orange">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="/getboard/{{post.id}}" target="_blank">{{post.title}}</a>
                <span>{{post.content}}</span>
                <span>Posted by: {{post.user.first_name}} {{post.user.last_name}}</span>
            </div>
            <div class="meta">
                {{#if post.comments.length}}
                <span>Comments</span>
                {{#each post.comments}}
                <span>{{comment_text}}</span>
                {{/each}}
                {{/if}}
            </div>
        </article>
    </li>
    {{/each}}
</ol>