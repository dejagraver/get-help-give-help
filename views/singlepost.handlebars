<header>
  <nav>
    <ul>
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/giveboard">Give Help Board</a>
      </li>
      <li>
        <a href="/getboard"><u>Get Help Board</u></a>
      </li>
      <li id="login-logout">
        {{#if loggedIn}}
        <a href="">Create New Post</a>
        <button class="btn btn-light">logout</button>
        {{else}}
        <a href="/login" id="navlogin">sign up or log in</a>
        {{/if}}
      </li>
    </ul>
  </nav>
</header>
<section>
  <h2>{{post.title}}</h2>
  <span>Created by:{{post.user.first_name}} {{post.user.last_name}}</span>
  <span>Category: {{post.category.name}}</span>
  <span>{{post.content}}</span>



</section>

{{#if loggedIn}}
<section>
  <button type="button" id="editBtn">Edit Post</button>
  <button type="button" id="deleteBtn">Delete Post</button>
</section>
{{/if}}

{{#if post.comments.length}}
<section>
  <h2>Comments</h2>
  {{#each post.comment}}
  <span>{{post.comment.text}}</span>
  {{/each}}
</section>
{{/if}}

<script src="/javascript/single-post.js"></script>
<script src="/javascript/homepage.js"></script>