<h1>My Posts</h1>

<article id="create-post">
    <form id="create-post-form">
        <label>Choose a board:</label>
        <select id="boardSelect">
            <option value='1'>Give Help</option>
            <option value='2'>Get Help</option>
        </select>
        <div class="spacing">
            <label for="post-title">Post Title:</label>
            <input name="post-title" type="text" id="post-title" class="border border-info">
        </div>
        <div class="spacing">
            <label for="post-content" id="post-content-label">Post Content:</label>
            <textarea name="post-content" id="post-content" class="border border-info"></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary spacing" >Submit</button>
    </form>
</article>

<script src="/javascript/create-post.js"></script>