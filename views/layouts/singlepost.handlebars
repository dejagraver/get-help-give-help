<section>
  <h2>Create New Post</h2>

  <form >
  <label>Choose a Board:</label>
  <select>
    <option value="1">GetBoard</option>
    <option value="2">GiveBoard</option>
  </select>
  <br><br>
  <input type="submit" value="Submit">
  </form>
  
  <form>
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="category_id">Link</label>
      <input id="category_id" name="category_id" />
    </div>
    <button type="submit" class="btn btn-light">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>